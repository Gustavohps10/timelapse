{
  "name": "@timelapse/connector-sdk",
  "version": "1.0.0",
  "private": false,
  "description": "Define os contratos e interfaces (SDK) para a criação de conectores no ecossistema timelapse.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup --format esm,cjs --dts",
    "clean": "rimraf dist .turbo"
  },
  "devDependencies": {
    "@timelapse/application": "workspace:*",
    "@timelapse/cross-cutting": "workspace:*",
    "@timelapse/domain": "workspace:*",
    "@timelapse/presentation": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}