{
  "name": "@timelapse/infra",
  "version": "1.0.0",
  "private": true,
  "description": "Pacote de infraestrutura consolidado para o Timelapse, contendo implementações concretas de recursos externos",
  "type": "module",
  "scripts": {
    "build": "tsup --format esm,cjs --dts",
    "clean": "rimraf dist .turbo"
  },
  "exports": {
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./contracts": {
      "import": "./dist/contracts/index.js",
      "types": "./dist/contracts/index.d.ts"
    },
    "./http": {
      "import": "./dist/http/index.js",
      "types": "./dist/http/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    },
    "./sync": {
      "import": "./dist/sync/index.js",
      "types": "./dist/sync/index.d.ts"
    },
    "./facades": {
      "import": "./dist/facades/index.js",
      "types": "./dist/facades/index.d.ts"
    },
    "./workflow": {
      "import": "./dist/workflow/index.js",
      "types": "./dist/workflow/index.d.ts"
    },
    "./data": {
      "import": "./dist/data/index.js",
      "types": "./dist/data/index.d.ts"
    }
  },
  "dependencies": {
    "@timelapse/application": "workspace:*",
    "@timelapse/cross-cutting": "workspace:*",
    "@timelapse/domain": "workspace:*",
    "ajv": "^8.17.1",
    "archiver": "^7.0.1",
    "axios": "^1.7.9",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "keytar": "^7.9.0",
    "rxjs": "^7.8.2",
    "unzipper": "^0.12.3"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/unzipper": "^0",
    "typescript": "^5.8.3"
  }
}
