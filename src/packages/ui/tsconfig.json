{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ES2020"
    ],
    "module": "ESNext",
    "target": "es6",
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": { 
      "@/*": ["./src/*"] 
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../presentation" }
  ]
}